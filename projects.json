---
---

[
  {% for project in site.projects %}
    {
      "title": "{{ project.title | escape }}",
      "subtitle": "{{ project.subtitle | escape }}",
      "description": "{{ project.description | escape }}",
      "tags": "{{ project.tags | join: ', ' }}",
      "type": "{{ project.type }}",
      "audience": "{{ project.audience }}",
      "difficulty": "{{ project.difficulty }}",
      "preparation-time": "{{ project.preparation-time }}",
      "project-time": "{{ project.project-time }}",
      "author": {
        "name": "{{ project.author.name }}"
      },
      "thumbnail": "{{ site.baseurl }}/assets/images/project-thumbnails/{{ project.thumbnail }}",
      "url": "{{ site.baseurl }}{{ project.url }}"
    }{% unless forloop.last %},{% endunless %}
  {% endfor %}
]
