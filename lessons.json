---
---
[
  {% for lesson in site.lessons %}
    {
      "title": "{{ lesson.title | escape }}",
      "subtitle": "{{ lesson.subtitle | escape }}",
      "description": "{{ lesson.description | escape }}",
      "tags": "{{ lesson.tags | join: ', ' }}",
      "preparationTime": "{{ lesson.preparation-time }}",
      "lessonTime": "{{ lesson.lesson-time }}",
      "author": {
        "name": "{{ lesson.author.name }}"
      },
      "thumbnail": "{{ lesson.thumbnail }}",
      "url": "{{ site.url }}{{ lesson.url }}"
    }{% unless forloop.last %},{% endunless %}
  {% endfor %}
]
